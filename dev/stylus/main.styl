@import reset
@import mixins
@import vars
@import groups

font_inc('GoogleSans-Regular', 'GoogleSans-Regular.woff2')
font_inc('GoogleSans-Bold', 'GoogleSans-Bold.woff2')


.row
  w 100%
  df({
    df:'.row'
  })


body
  font 14px "GoogleSans-Regular"
  color RGB( var(--black) )
  background-color RGB( var(--gray) )

::-webkit-scrollbar
  wh(5px)

::-webkit-scrollbar-track-piece
  br(12px)
  bgc(#eee)
  box-shadow inset -1px -1px 1px RGBA(255, 255, 255, 0.7), inset 1px 1px 2px RGBA(174, 174, 192, 0.2)

::-webkit-scrollbar-thumb
  bgc(RGBA(247, 145, 65, 0.8))
  br(12px)
  height 50px
.title
  font 20px "GoogleSans-Bold"
  posr()
  lih(28px)
  color RGB( var(--black) )
  &:after
    af('')
    wh(25px,2px)
    bgc RGB(var(--orange))

.binpt
  &-value
    br(10px)
    bgc(RGBA(var(--light-pink),.2))
    wh(440px,34px)
    pl(var(--inner-gap))
    box-shadow: inset -1px -1px 1px rgba(255, 255, 255, 0.7), inset 1px 1px 2px rgba(221, 221, 221, 0.2)
  &-search
    bg(RGBA(var(--light-pink),.2) url('../img/search_inpt.svg') no-repeat calc(100% - var(--inner-gap)) center)
.btn
  &-more
    ml(var(--inner-gap))
    svg
      wh 30px 10px
      stroke RGBA(var(--light-pink),.2)
      fill RGBA(var(--light-pink),.2)
  &-link
    color RGB(var(--purple))
  &-action
    bgc(RGB(var(--light-gray)))
    br(6px)
    df({
      df:'.btn-action'
      ali:'center'
      jus:'center'
    })
    transition .35s ease
    wh 32px
    box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFF
    svg,img
      wh 12px
      transition .35s ease
      stroke RGB(var(--black))
    &:hover,&:active
      svg
        stroke RGB(var(--blue))
    &.active
      background rgba(211, 217, 249, 0.2)
      box-shadow inset -1px -1px 1px rgba(255, 255, 255, 0.7), inset 1px 1px 2px rgba(221, 221, 221, 0.2)
      border-radius 6px
  &-char
    ml(auto)
  &-blue
    bdrs(6px)
    ff('GoogleSans-Bold')
    lih(18px)
    p(var(--inner-gap) calc(var(--inner-gap)*2))
    transition .35s ease
    background-color RGB(var(--blue))
    color #fff
    box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFF
    &.another
      background rgba(211, 217, 249, 0.2)
      color RGBA(var(--black),.6)
.inpt,.text
  &-title
    lih(28px)
  &-value
    w(100%)
    db()
    bdb(1px solid RGB(var(--blue)))
    color RGBA(var(--black),.6)
    pl(var(--inner-gap))
    pr(calc(var(--inner-gap)* 3))
    bg(url('../img/pencil.svg') no-repeat calc(100% - var(--inner-gap)) center)
    lih(28px)
    fz(13px)
    mt( calc(var(--inner-gap) / 2) )
  &-label
    posr()
    db()
    wh(38px,22px)
    cursor: pointer
    &:before,&:after
      posa()
      af()
      transition .35s ease
    &:before
      wh(100%)
      bdrs(40px)
      bg(RGBA(var(--light-pink,1)))
    &:after
      bdrs(100%)
      wh(18px)
      bg(#fff)
      t 2px
      l 2px
  input[type='checkbox']
    display: none
    &:checked+.inpt-label:before
      bg(RGBA(var(--blue,1)))
    &:checked+.inpt-label:after
      l 19px
.text
  &-value
    height 122px
    resize none
    bgp(right var(--inner-gap))
.inpt
  &-value
    height 34px
.select
  select
    db()
    bgc(RGB(var(--light-gray)))
    br(4px)
    bd(1px solid #E5E5E5)
    wh(220px,34px)
    p(0 var(--inner-gap))
    mt( calc(var(--inner-gap) / 2))
.table
  w 100%
  border-collap seseparate
  border-spacing 0 10px
  thead
    tr
      &:before
        af()
        posa()
        wh(100%)
        bgc(RGB(var(--light-gray)))
        z-index 0
        t 0
        l 0
        box-shadow 0px 0px 4px rgba(0, 0, 0, 0.12)
        bdrs 4px
  tr
    posr()
    th,td
      &:first-child
        pl(8px)
    th
      posr()
      z-index 1
      .th
        p(32px 0)
    .td
      .inpt
        df({
          "df":'td-inpt'
          "jus":center
        })
  tbody
    mt 10px
    td
      posr()
      z-index 1
    tr
      &:after,&:before
        posa()
        af()
        l 0
      &:after
        wh(8px,100%)
        bgc(#5068E2)
        bdrs(4px 0px 0px 4px)
      &:before
        wh(100%)
        bgc(RGB(var(--light-gray)))
        z-index 0
        box-shadow 0px 0px 4px rgba(0, 0, 0, 0.12)
        bdrs 4px
      &.unactive
        &:after
          opacity .5
      .td
        p(8px 0)
        tac()
  &-actions
    df({
     df:'.table-actions'
     ali:center
     jus:center
    })
    column-gap 10px

// Login page
.login
  .row
    height: 100%
  &>.section
    posr()
    wh calc( (1308 / 1360) * 100%) calc( 100vh - calc(var(--main-gap) * 2 ) )
    m var(--main-gap) auto
    ovh()
    br 32px
    box-shadow -5px -5px 10px rgba(255, 255, 255, 0.5), 5px 5px 10px rgba(170, 170, 204, 0.25), 10px 10px 20px rgba(170, 170, 204, 0.5), -10px -10px 20px #FFF
  &-left,&-right
    w 50%
    fdc()
    df({
      df:'.login-part'
      jus:'center'
    })
  &-left
    background-color RGB( var(--orange))
  &-logo
    m(0 calc(var(--main-gap) * 2 ) 0 auto)
  &-right
    pl(calc(var(--main-gap) * 2 ))
    background-color RGB( var(--light-gray))
  &-form-row
    posr()
    mw(313px)
  &-inpt
    &-title
      db()
      font 13px 'GoogleSans-Bold'
      lih(28px)
    &-value
      wh 100% 42px
      fz(13px)
      pl(var(--inner-gap))
      bdb(1px solid RGB( var(--purple)))
      bgc transparent
      &.-process
        bdb(1px solid RGBA( var(--orange),.8))
      &.-success
        bdb(1px solid RGBA( var(--green),.8))
      &.-error
        bdb(1px solid RGBA( var(--red)),.8)
  &-langs,&-btn
    posa()
  &-langs
    t var(--main-gap)
    r var(--main-gap)
  &-lang
    &.-active
      ff('GoogleSans-Bold')
      lih(18px)
      ttu()
      text-decoration: underline
  &-btn
    wh 12px 24px
    t 33px
    r var(--inner-gap)
    &-svg
      wh 100%
      m 0 auto
      fill none
      stroke RGB( var(--purple))

// Login page end
.notification
  bd(1px solid RGB(var(--blue)))
  bdrs(8px)
  b(90px)
  l(0)
  r(0)
  m(auto)
  df({
    df: 'notification'
    ali: 'center'
  })
  w(max-content)
  background-color #fff
  max-width 640px
  position fixed
  border-radius 8px
  padding 5px 20px 5px 6px
  border 1px solid RGB(var(--blue))
  box-shadow 0px 6px 20px -6px rgba(75,24,24,0.1), 0px 8px 40px -4px rgba(75,24,24,0.1)
  opacity 0
  transform translateY(200%) scale(0.3)
  transition 0.35s ease
  &.show
    opacity 1
    transition 0.35s ease
    transform translateY(0) scale(1)
  &:before
    af()
    db()
    wh(6px,48px)
    bdrs(200px)
    background-color RGB(var(--blue))
  &.error
    border 1px solid RGBA(var(--red), 1)
    &:before
      background-color RGBA(var(--red), 1)
  &.success
    border 1px solid RGBA(var(--green), 1)
    &:before
      background-color RGBA(var(--green), 1)
  &-text
    pl(calc(var(--inner-gap) * 2))
    font-size 12px
    line-height 17px



.block-shadow
  box-shadow: 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFFFFF

.head,.content ,.foot
  m var(--inner-gap)

//header
.head
  bgc RGB( var(--light-gray))
  border-radius: 10px 10px 0px 0px
  p 7px 0 14px
  &-lang
    &.-active
      .head-lang_text
        font 13px 'GoogleSans-Bold'
        lih(18px)
        text-decoration: underline
  &-left
    fdc()
    df({
      df:'.head-left'
    })
  &-icon
    posr()
    &-svg
      wh 16px
      stroke-width 1.15
      stroke RGB( var(--purple))
    &-reminder
      posa()
      border 1px solid #fff
      border-radius 100%
      bgc RGB( var(--green))
      wh 8px
      t -3px
      r 0px
  &-name
    pl 18px
    font 30px 'GoogleSans-Bold'
    lih 28px
  &-role
    lih(32px)
    font 16px 'GoogleSans-Bold'
    pl 18px
    color RGB( var(--orange))
  &-right
    ml auto
    p(18px)
    +tablet()
      mr 18px
      p(0)
    &-row,&-item
     column-gap calc(var(--inner-gap) * 2)
     flex-wrap wrap
     justify-content space-between
     +tablet()
      justify-content flex-start
    &-item
      /*&:first-child
        mb(calc(var(--inner-gap) * 2))*/
      &:after
        dn()
        +tablet()
          af()
          wh 1px 18px
          bgc RGBA( var(--black),.2)
      df({
        df:'.head-right-item'
        ali:'center'
      })
      posr()
      &:last-child:after
        dn()
  &-text-item
    df({
      df:'.head-text-item'
      ali:'center'
    })
    column-gap var(--inner-gap)
  &-row
    df({
      ali:'center'
    })
    flex-wrap wrap
  &-profile
    posr()
    wh 40px
  &-notifications
    posa()
    bgc RGB( var(--gray))
    box-shadow inset -1px -1px 1px rgba(255, 255, 255, 0.7), inset 1px 1px 2px rgba(221, 221, 221, 0.2)
    df({
      df:'.head-notifications'
      ali:'center'
      jus:'center'
    })
    t -3px
    r 1px
    wh 14px
    br @width
//header

.foot
  bgc(RGB(var(--light-gray)))
  bdrs(0 0 4px 4px)
  p(9px 0)
  box-shadow: 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #fff
  &-row
    df({
      ali:center
    })
  &-nav
    ml(30px)
    w(100%)
  &-logo
    pl(20px)
    pt(7px)
  &-btn
    p(11px)
    wh(42px)
    .btn-icon-svg
      wh(20px)
      stroke #373A4A
    &.active,&:hover
      bgc(rgba(211, 217, 249, 0.2))
      bdrs(10px)
      box-shadow: inset -1px -1px 1px rgba(255, 255, 255, 0.7), inset 1px 1px 2px rgba(221, 221, 221, 0.2)
      .btn-icon-svg
        stroke #5068E2
  &-out
    ml(auto)
    mr(9px)
    db()
    .btn-icon-svg
      stroke RGB(var(--orange))
.content
  ovh()
  posr()
  bgc RGB(var(--gray))
  p var(--innner-gap)
  box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFF
  height calc(100vh - 156px - (2 * var(--inner-gap)))
  &-scrolled
    m(20px 0)
    pt(0)
    pb(var(--inner-gap))
    overflow-y auto
    height calc(100% - 40px)
  &-body
    m var(--inner-gap)
    bgc(RGB(var(--light-gray)))
    br 4px
    box-shadow: 1px 1px 2px rgba(170, 170, 204, .5), -1px -1px 2px #FFF
  &-section
    height 100%
    bgc RGB( var(--light-gray))
    box-shadow: 0px 0px 4px rgba(0, 0, 0, .12)
    &:first-child
      br(4px 0px 0px 4px)
    &:last-child
      br(0px 4px 4px 0px)
    p(calc(var(--inner-gap)))
    +tablet()
      p(calc(var(--inner-gap) * 2 ))
  &-header,&-inner
   p(calc(var(--inner-gap)*2))
  &-header
    df({
      ali:'center'
    })
    flw()
  &-inner
    posr()
    ovh()
    wh 100% calc(100vh - 250px - (2 * var(--inner-gap)))
    pt 0
    &>.row
      height 100%
    &.with-pagination
      wh 100% calc(100vh - 350px - (2 * var(--inner-gap)))
  &-pagination
    bgc(RGB(var(--light-gray)))
    height 42px
    transform translateY(55px)
    p(5px var(--inner-gap))
  &-title
    font 12px 'GoogleSans-Bold'
    ttu()
    color RGB( var(--black),.4)
  &-action
    df({
      df:'.content-action'
      ali:'center'
    })
    column-gap calc(var(--inner-gap) * 3)
    ml(auto)
  &-card,&-table
    wh(97%,calc(100vh - 250px - (2 * var(--inner-gap))))
    posa()
    z-index 10
    t 1px
  &-card
    transition 1s ease
    opacity: .35
    transform-origin right
    transform perspective(200px) translateZ(-50px) scale(.15) rotateY(-90deg)
    &.show
      opacity: 1
      transition .45s ease
      transform perspective(600px) translateZ(0px) scale(1) rotateY(0deg)

  &-actions
    flex 0 0 54px
    box-shadow 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFF
  &-popup
    posa()
    wh(100%)
    t(0)
    l(0)
    df({
      df: '.content-popup'
      jus: center
      ali: center
    })
    transition .45s ease
    opacity 0
    background rgba(211, 217, 249, 0.6)
    backdrop-filter blur(5px)
    &.show
      opacity 1
    &-header
      df({
        df: '.content-popup-close'
        ali: center
        jus: space-between
      })
    &-inner
      p(calc(var(--inner-gap)*2.4) calc(var(--inner-gap)*2.9))
      w(620px)
      bdrs(4px)
      background #fff
    &-body
      m(var(--inner-gap) 0 calc(var(--inner-gap)*2))
      &.empty
        .content-popup-body-text
          tac()
          p(174px 0)
          strong
            color RGBA(var(--blue))
      &-items
        mt(calc(var(--inner-gap)*3))
      &-item
        df({
          df: '.content-popup-body-item'
          ali: center
        })
        w(100%)
        bdrs(4px)
        mb(calc(var(--inner-gap)/2))
        border 1px solid rgba(211, 217, 249, 0.2)
        box-shadow 1px 1px 2px rgba(0, 0, 0, 0.18)
        &_move
          p(calc(var(--inner-gap)*2))
          svg
            wh(10px,20px)
        &_image
          wh(46px,54px)
          df({
            df: '.content-popup-body-item_image'
            ali: center
            jus: center
          })
          ovh()
          bdrs(3px)
        &_info
          ml(calc(var(--inner-gap)*2))
        &_infodata
          color RGBA(var(--black),.6)
        &_actions
          df({
            df: '.content-popup-body-item_actions'
            ali: center
          })
          ml(auto)
          mr(calc(var(--inner-gap)*2))
          column-gap var(--inner-gap)
    &-footer
      df({
        df: '.content-popup-footer'
        ali: center
        jus: space-between
      })
      &_actions
        df({
          df: '.content-popup-footer_actions'
          ali: center
        })
        column-gap var(--inner-gap)
.pagination
  &-row
    df({
        df: '.pagination-row'
        ali: 'center'
        jus:'space-between'
      })
    fz 13px
  &-right
    df({
      df: '.pagination-right'
      ali: 'center'
    })
    column-gap var(--inner-gap)
  &-select
    select
      wh(80px,32px)
      mt(0)
      cursor pointer
  &-center
    df({
      df: '.pagination-center'
      ali: 'center'
    })
    m(0 auto)
    column-gap var(--inner-gap)
  &-inpt
    input
      wh(56px,32px)
      bdrs(4px)
      p(0 11px)
      color RGB(var(--purple))
      border 1px solid #DFE3E8
      box-shadow inset 0px 0px 3px rgba(0, 0, 0, 0.6)
// Category
.category
  &-section
    &-first
      w(295 / 1295 * 100%)
    &-second
      w(335 / 1295 * 100%)
    &-third
      w(715 / 1295 * 100%)
    &-four
      w(54px)
      p(var(--inner-gap) !important)
  &-header
    .content-form
      ml(calc(var(--inner-gap) * 4 ))
  &-form
    pr(var(--inner-gap))
    .inpt,.block,.select,.text
      mt( calc(var(--inner-gap)*2) )
  &-char
    df({
      df:'.category-char'
      ali:'flex-end'
    })
    mt(var(--inner-gap))
    p(var(--inner-gap))
    bgc(var(--light-gray))
    bdrs(0px 4px 4px 0px)
    mr(var(--inner-gap))
    box-shadow: 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFF
    flex-wrap wrap
    column-gap calc( 20 / 603 * 100%)
    &_name,&_type
      w( 220 / 603 * 100%)
    &_type select
      w(100%)
    &_sort
      w( 71 / 603 * 100%)
    .text
      mt(calc(var(--inner-gap) * 2))
      w(100%)
      textarea
        height 34px
  &-list
    mt(calc(var(--inner-gap)*2))
    &_item
      mb(calc(var(--inner-gap)))
      &.open
        mb(calc(var(--inner-gap)*2))
        .category-sublist
          opacity 1
          visibility visible
          max-height 300px
        .category-list_icon
          transform rotate(90deg)
        .category-list_content
          bdc transparent
    &_content
      df({
        df:'.category-list-content'
        ali:'center'
      })
      bdrs(4px)
      bd(1px solid RGB( var(--light-gray2)))
      p(var(--inner-gap))
    &_icon
      wh(10px,5px)
      ml(auto)
    &_cnt
      ml(calc(var(--inner-gap)/2))
  &-sublist
    posr()
    pl(calc(var(--inner-gap)*1.4))
    opacity 0
    visibility hidden
    max-height 0
    &:before
        af()
        posa()
        wh 1px 100%
        bgc RGB( var(--light-gray2))
        t 0
        l 14px
    &_item
      df({
        df:'.category-sublist-item'
        ali:'center'
      })
      mb(var(--inner-gap))
      &:before
        af()
        wh(10px,6px)
        bdrs(0 0px 0 5px)
        bdl(1px solid RGB( var(--light-gray2)))
        bdb(1px solid RGB( var(--light-gray2)))
        transform translateY(8px)
    &_content
      pl(calc(var(--inner-gap)/2))
      transform translateY(10px)
      button
        color RGB( var(--blue))
  &-image
    &_title
      bdrs(6px)
      tac()
      font 12px 'GoogleSans-Bold'
      color RGB( var(--blue))
      bgc(RGBA(var(--light-pink),.2))
      p(var(--inner-gap) 0)
      mt(calc(var(--inner-gap)/2))
    &_file
      dn()
// Category end

// Consultant
.consultant
  &-list
    height: 100%
    overflow-y: auto
    &_content
      df({
        df:'.consultant-list-content'
        ali:'center'
      })
      w(100%)
      ovh()
      column-gap calc(var(--inner-gap))
    &_item
      w(97%)
      posr()
      p(calc(var(--inner-gap)/2) var(--inner-gap))
      mb(var(--inner-gap))
      bdrs(4px)
      &.-open
        bgc(RGB(var(--purple)))
        color #FFF
      &:hover
        bgc RGBA( var(--light-pink),.2)
    &_title
      font 13px "GoogleSans-Bold"
    &_img
      height 40px
      flex 0 0 40px
    &_text
      ovh()
      w(70%)
      white-space nowrap
      text-overflow ellipsis
    &_date
      posa()
      t(9px)
      r(calc(var(--inner-gap)/2))
  &-aside
    dn()
    +tablet()
      db()
      p(14px)
  &-body
    w(100%)
    p(0)
    +tablet()
      display flex
      flex-wrap wrap
      p(0)
    &-header
      bdb(1px solid RGBA( var(--light-pink),.2))
      p(var(--inner-gap))
      +tablet()
        w(100%)
      &_user
        df({
          df:'.consultant-body-header-user'
          ali:'center'
        })
        column-gap var(--inner-gap)
      &_title
        font 13px "GoogleSans-Bold"
      &_recent
        color RGBA( var(--black),.6)
      &_action
        ml(auto)

    &-inner
      df({
        df:'.consultant-body-inner'
        ali:'center'
      })
      height 80%
      flex-direction column
      justify-content flex-end
      +tablet()
         w(calc(100% - 340px))
         border-right 1px solid RGBA(var(--light-pink), .2)
         height calc(100% - calc(var(--inner-gap)*8))
    &-action
      w(340px)
      dn()
      +tablet()
        db()
  &-messages
    mw(644px)
    m(0 auto)
    p(var(--inner-gap))
    df({
      df:'.consultant-messages'
    })
    flex-direction column
    overflow-y auto
    +tablet()
      w(100%)
      mb(var(--inner-gap))
      mt(var(--inner-gap))
  &-msg
    posr()
    df({
      df:'.consultant-msg'
      ali:'flex-start'
    })
    column-gap var(--inner-gap)
    mb(calc(var(--inner-gap)/2))
    &_body
      bdrs(8px 20px 20px 20px)
      bdc(RGBA(255, 255, 255, .1))
      bd(1px solid RGBA(35, 35, 35, .02))
      p(12px 16px)
      display inline-block
      box-shadow 0px 2px 5px rgba(35, 35, 35, .05)
    &_right
      justify-content flex-end
      .consultant-msg_body
        bdrs(20px 8px 8px 20px)
        bgc RGBA( var(--light-pink),.2)
    &_time
