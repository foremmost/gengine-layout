@import reset
@import mixins
@import vars
@import groups

font_inc('Geometria-Regular', 'Geometria-Regular.woff2')
font_inc('Geometria-Bold', 'Geometria-Bold.woff2')


.row
  w 100%
  df({
    df:'.row'
  })


body
  font 14px "Geometria-Regular"
  color RGB( var(--black) )
  background-color RGB( var(--gray) )


// Login page
.login
  &>.section
    posr()
    wh calc( (1308 / 1360) * 100%) calc( 100vh - calc(var(--main-gap) * 2 ) )
    m var(--main-gap) auto
    ovh()
    br 32px
    box-shadow -5px -5px 10px rgba(255, 255, 255, 0.5), 5px 5px 10px rgba(170, 170, 204, 0.25), 10px 10px 20px rgba(170, 170, 204, 0.5), -10px -10px 20px #FFF
  &-left,&-right
    w 50%
    fdc()
    df({
      df:'.login-part'
      jus:'center'
    })
  &-left
    background-color RGB( var(--orange))
  &-logo
    m(0 calc(var(--main-gap) * 2 ) 0 auto)
  &-right
    pl(calc(var(--main-gap) * 2 ))
    background-color RGB( var(--light-gray))
  &-form-row
    posr()
    mw(313px)
  &-inpt
    &-title
      db()
      font 13px 'Geometria-Bold'
      lih(28px)
    &-value
      wh 100% 42px
      fz(13px)
      pl(var(--inner-gap))
      bdb(1px solid RGB( var(--purple)))
      bgc transparent
      &.-process
        bdb(1px solid RGBA( var(--orange),.8))
      &.-success
        bdb(1px solid RGBA( var(--green),.8))
      &.-error
        bdb(1px solid RGBA( var(--red)),.8)
  &-langs,&-btn
    posa()
  &-langs
    t var(--main-gap)
    r var(--main-gap)
  &-lang
    &.-active
      ff('Geometria-Bold')
      lih(18px)
      ttu()
      text-decoration: underline
  &-btn
    wh 12px 24px
    t 33px
    r var(--inner-gap)
    &-svg
      wh 100%
      m 0 auto
      fill none
      stroke RGB( var(--purple))

// Login page end


//header
.head
  bgc RGB( var(--light-gray))
  box-shadow: 1px 1px 2px rgba(170, 170, 204, 0.5), -1px -1px 2px #FFFFFF
  border-radius: 10px 10px 0px 0px
  pt 7px
  m var(--inner-gap)
  height 76px
  &-left
    fdc()
    df({
      df:'.head-left'
    })
  &-icon
    posr()
    &-svg
      wh 16px
      stroke-width 1.15
      stroke RGB( var(--purple))
    &-reminder
      posa()
      border 1px solid #fff
      border-radius 100%
      bgc RGB( var(--green))
      wh 8px
      t -3px
      r 0px
  &-name
    pl 18px
    font 30px 'Geometria-Bold'
    lih 28px
  &-role
    lih(32px)
    font 16px 'Geometria-Bold'
    pl 18px
    color RGB( var(--orange))
  &-right
    ml auto
    mr 18px
    &-row,&-item
     column-gap calc(var(--inner-gap) * 2)
    &-item
      df({
        df:'.head-right-item'
        ali:'center'
      })
      posr()
      &:after
        af()
        wh 1px 18px
        bgc RGBA( var(--black),.2)
      &:last-child:after
        dn
  &-text-item
    df({
      df:'.head-text-item'
      ali:'center'
    })
    column-gap var(--inner-gap)
  &-row
    df({
      ali:'center'
    })
  &-profile
    posr()
    wh 40px
  &-notifications
    posa()
    bgc RGB( var(--gray))
    box-shadow inset -1px -1px 1px rgba(255, 255, 255, 0.7), inset 1px 1px 2px rgba(221, 221, 221, 0.2)
    df({
      df:'.head-notifications'
      ali:'center'
      jus:'center'
    })
    t -3px
    r 1px
    wh 14px
    br @width
//header
